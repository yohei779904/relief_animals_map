<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_with url: new_item_path, method: :get, class: 'form-inline', local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= f.submit '商品を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>