  <nav class="navbar navbar-default navbar-static-top shadow-none">
    <div class="time-limit">
      <div class="pc_flash"><!-- レスポンシブ設定 -->
        <%= content_tag(:span, flash.notice, class: 'notice') if flash.notice %>
        <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
      </div>
      <div class="sp_flash"><!-- レスポンシブ設定 -->
        <%= content_tag(:span, flash.notice, class: 'notice') if flash.notice %>
        <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
      </div>
    </div>
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-left">
          <%= link_to image_tag('logo_main.png', alt: 'Logo'), root_path %>
        </a>
      </div>
      <% if rs_logged_in? %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to '登録情報', rescuestation_rescuer_member_path(current_rescuer_member) %></li>
